import {
  INVENTARIO_REQUEST,
  INVENTARIO_SUCCESS,
  INVENTARIO_FAIL,

} from '../../actions/types';

interface obtenerInventarioState {
  loading: boolean;
  error: string | null;
  nInventario: number;

}

const initialState: obtenerInventarioState = {
  loading: false,
  error: null,
  nInventario: 0,

};

const obtenerInventarioReducer = (state = initialState, action: any): obtenerInventarioState => {
  switch (action.type) {
    case INVENTARIO_REQUEST:
      return {
        ...state,
        loading: true,
        error: null
      };
    case INVENTARIO_SUCCESS:
      return {
        ...state,
        loading: false,
        nInventario: action.payload.numeroInventario,
      };
    case INVENTARIO_FAIL:
      return {
        ...state,
        loading: false,
        error: action.error || 'Error desconocido', // Mejor manejo de errores
      };
    default:
      return state;
  }
};

export default obtenerInventarioReducer;
