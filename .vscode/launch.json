{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "sourceMapPathOverrides": {
                // Mapea los archivos fuente para que el depurador se enfoque en tu c√≥digo.
                "webpack:///./src/*": "${webRoot}/*",
                "webpack:///./node_modules/*": "${workspaceFolder}/node_modules/*"
            },
            "skipFiles": [
                // Excluye archivos internos de Node.js y node_modules para evitar que el depurador se desplace a estos archivos.
                "<node_internals>/**/*.js",
                "node_modules/**/*.js"
            ]
        }
    ]
}
